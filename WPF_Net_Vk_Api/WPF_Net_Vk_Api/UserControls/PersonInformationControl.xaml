<UserControl x:Class="WPF_Net_Vk_Api.PersonInformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="800" Height="121">
    <Grid>
        <Image x:Name="IAvatar" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="LName" HorizontalAlignment="Left" Margin="115,0,0,0" VerticalAlignment="Top" FontSize="36" Content="FirstName SecondName"/>
        <Label Content="Общие друзья:" HorizontalAlignment="Left" Margin="115,60,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label x:Name="LMutualFriends" Content="Info" HorizontalAlignment="Left" Margin="333,60,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label x:Name="LOnline" Content="Info" HorizontalAlignment="Left" Margin="723,60,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Rectangle Fill="#00F4F4F5" HorizontalAlignment="Left" Height="121" VerticalAlignment="Top" Width="800" MouseUp="Rectangle_MouseUp"/>

    </Grid>
</UserControl>
